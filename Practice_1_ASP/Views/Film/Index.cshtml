@using Practice_1_ASP.Entities
@model IEnumerable<FilmModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-lg"></i>Create New 
    </a>
</p>

<table class="table table-striped table-hover text-center align-middle">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Logo</th>
            <th scope="col">Year</th>
            <th scope="col">Description</th>
            <th scope="col">Genre</th>
            <th scope="col">Country</th>
            <th scope="col">Duration</th>
            <th scope="col">Actors</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
                <tr>
                    <td>@Html.DisplayFor(modelItem => i.Id)</td>
                    <td>@Html.DisplayFor(modelItem => i.Name)</td>
                    <td class="text-center">
                        <img src="@i.Photo" class="img-fluid rounded shadow" style="height: 200px; width: auto;" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => i.Year)</td>
                    <td>@Html.DisplayFor(modelItem => i.Description)</td>
                    <td>@Html.DisplayFor(modelItem => i.Genre)</td>
                    <td>@Html.DisplayFor(modelItem => i.Country)</td>
                    <td>@Html.DisplayFor(modelItem => i.DurationMinutes)</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@i.Id" class="btn btn-secondary">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@i.Id" class="btn btn-warning">
                                <i class="bi bi-eye-fill"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@i.Id" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
        }
    </tbody>
</table>